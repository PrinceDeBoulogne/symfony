{% extends 'base.html.twig' %}

{% block title %}Artiste index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Artiste index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Pays</th>
                    <th>Style</th>
                    <th>Presentation</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for artiste in artistes %}
                <tr>
                    <td>{{ artiste.id }}</td>
                    <td>{{ artiste.nom }}</td>
                    <td>{{ artiste.pays }}</td>
                    <td>{{ artiste.style }}</td>
                    <td>{{ artiste.presentation }}</td>
                    <td>
                        <a href="{{ path('artiste_show', {'id': artiste.id}) }}">show</a>
                        <a href="{{ path('artiste_edit', {'id': artiste.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('artiste_new') }}">Create new</a>
    </div>
{% endblock %}
