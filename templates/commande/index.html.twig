{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Commande index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>NumeroCommande</th>
                    <th>DateCommande</th>
                    <th>Montant</th>
                    <th>Statut</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for commande in commandes %}
                <tr>
                    <td>{{ commande.id }}</td>
                    <td>{{ commande.numeroCommande }}</td>
                    <td>{{ commande.dateCommande ? commande.dateCommande|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ commande.montant }}</td>
                    <td>{{ commande.statut }}</td>
                    <td>
                        <a href="{{ path('commande_show', {'id': commande.id}) }}">show</a>
                        <a href="{{ path('commande_edit', {'id': commande.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('commande_new') }}">Create new</a>
    </div>
{% endblock %}
